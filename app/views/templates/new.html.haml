.page-header
  %h1 Upload template

.row
  .col-md-12
    %h1 Upload new template image
    = simple_form_for @template, url: templates_path, html: { class: 'form-vertical' } do |f|
      .row
        .col-md-4
          = f.input :image, input_html: { class: 'form-control2' }
        .col-md-8
          = f.submit "Upload", class: 'btn btn-default'